<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
           android:fillAfter="true"
    >
    <rotate
        android:fromDegrees="0"
        android:toDegrees="180"
        android:duration="500"
        android:pivotX="50%"
        android:pivotY="50%"
        />
    <scale
        android:fromXScale="0" android:fromYScale="0"
        android:toXScale="1.6"   android:toYScale="1.6"
        android:pivotX="50%"   android:pivotY="50%"
        android:duration="250"
        />
    <scale
        android:duration="250" android:startOffset="250"
        android:pivotX="50%"   android:pivotY="50%"
        android:fromXScale="1" android:fromYScale="1"
        android:toXScale="0.625" android:toYScale="0.625"
        />
</set>