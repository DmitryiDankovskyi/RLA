<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ToolBarEditTex" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="colorControlNormal">@null</item>
        <item name="colorControlActivated">@null</item>
        <item name="android:textColorHint">@color/lightGreen</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:titleTextAppearance" tools:ignore="NewApi">@style/ToolbarTextAppearance.Title</item>
    </style>

    <style name="ToolbarTextAppearance.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AchievementItemIndicators">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>


    <style name="border">
        <item name="android:height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="FullWidthEditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="LogIntEditText">
        <item name="android:background">@drawable/login_et_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AchievementItemStatisticIcon">
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/circle_background</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="TestStyle">
        <item name="android:background">@drawable/login_et_bg</item>
    </style>


