<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddedAchievements.create.CreateActivity">

    <LinearLayout
        android:id="@+id/box_of_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0">
        <ImageView
            android:id="@+id/img_ach_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/achievement"
            />

        <EditText
            android:id="@+id/et_title"
            style="@style/FullWidthEditText"
            android:maxLength="28"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:layout_weight="1"
            android:inputType="textMultiLine|textCapSentences"
            />
    </LinearLayout>

    <View
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        style="@style/border"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/box_of_title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />


    <EditText
        android:id="@+id/et_short_description"
        style="@style/FullWidthEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Short description"
        android:inputType="textCapSentences|textMultiLine"

        tools:text="@string/short_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border" />
    <View
        android:id="@+id/story_border2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        style="@style/border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_short_description"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toLeftOf="@+id/btn_copy"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp" />
    <EditText
        android:id="@+id/et_full_description"
        style="@style/FullWidthEditText"
        android:gravity="top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Full description"
        tools:text="@string/long_text"
        android:inputType="textMultiLine|textCapSentences"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/story_border2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_content_copy_primary_color_24dp"
        app:layout_constraintTop_toTopOf="@+id/story_border2"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/et_full_description"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
