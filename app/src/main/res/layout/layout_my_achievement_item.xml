<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">
    <ImageView
        android:id="@+id/mai_pick"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/achievement"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mai_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center">
            <Space
                style="@style/MySpace"/>

            <android.support.v7.widget.AppCompatImageView
                style="@style/SmallIcon"
                app:srcCompat="@drawable/ic_thumb_up_24dp" />
            <TextView
                android:id="@+id/mai_likes"
                style="@style/ThreePlusKDigitsIndicator" />

            <Space
                style="@style/MySpace"/>

            <android.support.v7.widget.AppCompatImageView
                style="@style/SmallIcon"
                app:srcCompat="@drawable/ic_comment_24dp" />
            <TextView
                android:id="@+id/mai_comments"
                style="@style/ThreePlusKDigitsIndicator"/>
            <Space
                style="@style/MySpace"/>
            <android.support.v7.widget.AppCompatImageView
                style="@style/SmallIcon"
                app:srcCompat="@drawable/ic_statistic_unlocked_24dp" />
            <TextView
                android:id="@+id/mai_unlocks"
                style="@style/ThreePlusKDigitsIndicator"/>
            <Space
                style="@style/MySpace"/>
            <android.support.v7.widget.AppCompatImageView
                style="@style/SmallIcon"
                app:srcCompat="@drawable/ic_statistic_difficulty_24dp" />
            <TextView
                android:id="@+id/mai_difficulty"
                style="@style/ThreePlusKDigitsIndicator"
                />
            <Space
                style="@style/MySpace"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mai_change"
                android:background="@drawable/background_round_appear_from_right"
                android:padding="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_create_24dp"
                android:paddingEnd="8dp"
                android:layout_width="33dp"
                android:layout_height="25dp"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>